<?php
// Moodle config.php template (Jinja2)

unset($CFG);
global $CFG;
$CFG = new stdClass();

// --- Database ---
$CFG->dbtype    = 'mysqli';
$CFG->dblibrary = 'native';
$CFG->dbhost    = '{{ moodle_db_host }}';
$CFG->dbname    = '{{ moodle_db_name }}';
$CFG->dbuser    = '{{ moodle_db_user }}';
$CFG->dbpass    = '{{ moodle_db_password | replace('\\', '\\\\') | replace("'", "\\'") }}';
$CFG->prefix    = 'mdl_';
$CFG->dboptions = array(
    'dbport' => 3306,
    'dbsocket' => false,
    'dbcollation' => 'utf8mb4_unicode_ci',
);

// --- Paths ---
$CFG->wwwroot  = '{{ moodle_siteurl }}';
$CFG->dataroot = '{{ moodle_datadir }}';

// --- Reverse proxy / SSL (ALB) ---
{# ここで、信頼プロキシCIDRを決定（moodle_trusted_proxy_cidrs が無ければ moodle_vpc_cidr を fallback） #}
{% set __cidrs = moodle_trusted_proxy_cidrs | default([]) %}
{% if (__cidrs | length == 0) and (moodle_vpc_cidr is defined) and moodle_vpc_cidr %}
  {% set __cidrs = [moodle_vpc_cidr] %}
{% endif %}

{% if __cidrs | length > 0 %}
$CFG->reverseproxy = true;
$CFG->sslproxy = true;
$CFG->reverseproxyaddresses = array(
{% for cidr in __cidrs -%}
    '{{ cidr }}'{% if not loop.last %},{% endif %}
{% endfor -%}
);
{% else %}
$CFG->reverseproxy = false;  // 信頼CIDR未指定時は従来通り
$CFG->sslproxy = true;
{% endif %}

// Hardening
$CFG->directorypermissions = 0777;
$CFG->cookiesecure = true;
$CFG->cookiehttponly = true;

// Bootstrap Moodle
require_once(__DIR__ . '/lib/setup.php');
