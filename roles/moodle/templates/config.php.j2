<?php
// Moodle config.php template (Jinja2)

unset($CFG);
global $CFG;
$CFG = new stdClass();

// --- Database ---
$CFG->dbtype    = 'mysqli';
$CFG->dblibrary = 'native';
$CFG->dbhost    = '{{ moodle_db_host }}';
$CFG->dbname    = '{{ moodle_db_name }}';
$CFG->dbuser    = '{{ moodle_db_user }}';
$CFG->dbpass    = '{{ moodle_db_password | replace('\\', '\\\\') | replace("'", "\\'") }}';
$CFG->prefix    = 'mdl_';
$CFG->dboptions = array(
    'dbport'     => 3306,
    'dbsocket'   => false,
    'dbcollation'=> 'utf8mb4_unicode_ci',
);

// --- Paths ---
$CFG->wwwroot  = '{{ moodle_siteurl }}';
$CFG->dataroot = '{{ moodle_datadir }}';

// --- Reverse proxy / SSL (ALB) ---
$CFG->reverseproxy = false;
$CFG->sslproxy     = true;

// --- Hardening ---
$CFG->directorypermissions = 0777;
$CFG->cookiesecure         = true;
$CFG->cookiehttponly       = true;

// Bootstrap Moodle
require_once(__DIR__ . '/lib/setup.php');
